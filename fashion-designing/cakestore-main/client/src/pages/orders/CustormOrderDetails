import { useState, useEffect } from 'react';
import { Link, useParams } from 'react-router-dom';
import { motion } from 'framer-motion';
import { useAuth } from '../../context/AuthContext';
import { getCustomOrderById } from '../../services/customOrderService';
import { FiArrowLeft } from 'react-icons/fi';

const MotionLink = motion(Link);

function CustomOrderSkeleton() {
  return (
    <div className="container mx-auto px-4 py-8">
      <div className="animate-pulse">
        <div className="mb-8">
          <div className="h-6 bg-gray-200 rounded w-48 mb-4" />
          <div className="h-8 bg-gray-200 rounded w-64 mb-2" />
          <div className="h-4 bg-gray-200 rounded w-96" />
        </div>
      </div>
    </div>
  );
}

export default function CustomOrderDetails() {
  const { id } = useParams();
  const { currentUser } = useAuth();
  const [order, setOrder] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');

  useEffect(() => {
    const fetchCustomOrder = async () => {
      if (!currentUser) return;
      try {
        setLoading(true);
        const orderData = await getCustomOrderById(id);
        setOrder(orderData || null);
      } catch (err) {
        setError(err.message || 'Failed to load custom order details');
      } finally {
        setLoading(false);
      }
    };
    fetchCustomOrder();
  }, [id, currentUser]);

  if (loading) return <CustomOrderSkeleton />;

  if (error) {
    return (
      <div className="min-h-screen bg-gray-50 py-8">
        <div className="container mx-auto px-4">
          <div className="max-w-2xl mx-auto">
            <div className="bg-red-100 border border-red-400 rounded-xl p-8 text-center">
              <h3 className="text-xl font-semibold text-gray-800 mb-2">Error</h3>
              <p className="text-gray-600 mb-6">{error}</p>
              <MotionLink
                to="/orders"
                className="inline-flex items-center gap-2 bg-blue-600 text-white py-3 px-6 rounded-xl font-semibold"
              >
                <FiArrowLeft className="text-sm" />
                Back to Orders
              </MotionLink>
            </div>
          </div>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50 py-8">
      <div className="container mx-auto px-4">
        <h1>Custom Order Details</h1>
        {order && <pre>{JSON.stringify(order, null, 2)}</pre>}
      </div>
    </div>
  );
}
